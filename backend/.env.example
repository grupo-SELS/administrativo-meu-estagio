# Configurações do Servidor
NODE_ENV=development
PORT=3001

# URL do Frontend (para CORS)
FRONTEND_URL=http://localhost:5173

# Firebase Configuration
# Baixe o Service Account Key do Firebase Console e:
# 1. Cole o JSON completo aqui em uma linha, OU
# 2. Salve como arquivo serviceAccountKey.json na pasta config/
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"seu-projeto-id",...}

# Firebase Storage Bucket
FIREBASE_STORAGE_BUCKET=seu-projeto.appspot.com

# Configurações de Segurança (opcional)
JWT_SECRET=seu-jwt-secret-muito-seguro
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Configurações de Upload
MAX_FILE_SIZE=5242880
MAX_FILES=5